<Window x:Class="vVid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="vVid" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                <Button Name="btnOpen" Content="Open" Click="BtnOpen_Click" Margin="2"/>
                <Button Name="btnPlay" Content="Play" Click="BtnPlay_Click" Margin="2"/>
                <Button Name="btnPause" Content="Pause" Click="BtnPause_Click" Margin="2"/>
                <Button Name="btnStop" Content="Stop" Click="BtnStop_Click" Margin="2"/>
                <TextBlock Name="txtPosition" Margin="10,0"/>
                <Slider Name="volumeSlider" Width="100" ValueChanged="VolumeSlider_ValueChanged" Minimum="0" Maximum="1" Value="0.5" Margin="10,0"/>
            </StackPanel>

            <MediaElement Name="mediaElement" LoadedBehavior="Manual" Stretch="Uniform" />

            <Slider Name="seekSlider" DockPanel.Dock="Bottom" Margin="5" PreviewMouseUp="SeekSlider_PreviewMouseUp"/>
        </DockPanel>
    </Grid>
</Window>
