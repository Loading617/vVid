<Window
    x:Class="vVidApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:vVidApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="vVid" Height="450" Width="800">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
        <MediaPlayerElement x:Name="VideoPlayer" Width="720" Height="400" AreTransportControlsEnabled="True"/>
        <Button Content="Open Video File" Click="OpenVideoFile_Click" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
